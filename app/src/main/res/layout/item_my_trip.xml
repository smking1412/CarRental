<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:id="@+id/linear_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tv_name_car_trip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="name car"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_price_car_trip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="Gia tien"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B5B0B0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_car_trip"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_margin="4dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical">
                <LinearLayout
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_start_date_trip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:text="24/5/2021 - 26/5/2021"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_driver_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="có tài xế"
                    android:textSize="16sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_status_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="trang thai"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:gravity="center"
                    android:textSize="16sp"/>

            </LinearLayout>


        </LinearLayout>
        <View
            android:id="@+id/view_trip_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#937F7F"/>

        <LinearLayout
            android:id="@+id/linear"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_cancel_trip"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="HỦY CHUYẾN"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:background="#D51B1B"
                android:gravity="center"
                />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>